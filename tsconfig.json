{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "paths": {
      "@images/*": [
        "./public/assets/images/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@components": [
        "./src/components/index.tsx"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@modules/": [
        "./src/modules/index.tsx"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@utils/": [
        "./src/utils/index.ts"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@redux/*": [
        "./src/redux/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}